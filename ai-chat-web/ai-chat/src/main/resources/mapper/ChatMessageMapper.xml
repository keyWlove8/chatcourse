<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.k8.mapper.ChatMessageMapper">

    <select id="selectChatMessagesByMemoryId" parameterType="string" resultType="com.k8.entity.MultiChatMessage">
        SELECT * FROM multi_chat_message WHERE memory_id = #{memoryId} ORDER BY timestamp ASC
    </select>

    <delete id="deleteByMemoryId" parameterType="string">
        DELETE FROM multi_chat_message WHERE memory_id = #{memoryId}
    </delete>

</mapper>
