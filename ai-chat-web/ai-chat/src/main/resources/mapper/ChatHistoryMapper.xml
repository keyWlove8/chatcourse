<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.k8.mapper.ChatHistoryMapper">

    <select id="selectHistoryByUserId" parameterType="string" resultType="com.k8.entity.ChatHistory">
        SELECT * FROM chat_history WHERE creator_id = #{userId} ORDER BY last_time DESC
    </select>

    <select id="getChatHistoryByMemoryId" parameterType="string" resultType="com.k8.entity.ChatHistory">
        SELECT * FROM chat_history WHERE memory_id = #{memoryId}
    </select>

    <delete id="deleteHistoryByMemoryId" parameterType="string">
        DELETE FROM chat_history WHERE memory_id = #{memoryId}
    </delete>

</mapper>
